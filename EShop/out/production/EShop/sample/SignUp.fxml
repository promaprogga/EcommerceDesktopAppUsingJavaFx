<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="sign_In" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #6A1B9A;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SignUp">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="150.0" layoutY="92.0" prefHeight="237.0" prefWidth="300.0">
            <children>
            <HBox>
               <children>
                  <TextField fx:id="UpTextName" alignment="TOP_LEFT" promptText="Username" style="-fx-border-color: black; -fx-border-width: 0px 0px 1px 0px;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
                <HBox alignment="CENTER">
                    <children>


                        <TextField fx:id="UpTextEmail" alignment="TOP_LEFT" promptText="Email" style="-fx-border-color: black; -fx-border-width: 0px 0px 1px 0px;" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="20.0" top="10.0" />
                            </HBox.margin></TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefWidth="200.0">
                    <children>


                        <TextField fx:id="UpTextPass" alignment="TOP_LEFT" promptText="Password" style="-fx-border-color: black; -fx-border-width: 0px 0px 1px 0px;" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="20.0" top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <Button fx:id="Sign_Up" mnemonicParsing="false" onAction="#Sign_Up" prefHeight="37.0" prefWidth="111.0" style="-fx-background-color: #2f2f2fa3; -fx-background-radius: 100; -fx-font-family: Quicksan; -fx-font-style: bold; -fx-font-size: 15;" text="Sign Up" textFill="#fffafa">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
